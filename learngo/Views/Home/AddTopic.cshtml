@model Backend.Controllers.TopicDto

@{
    ViewData["Title"] = "Добавить тему";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
    <header>
        <h1>Добавить тему</h1>
        <nav>
            <ul>
                <li><a href="@Url.Action("Index", "Home")">Главная страница</a></li>
                <li><a href="@Url.Action("Catalog", "Home")">Темы изучения</a></li>
                <li><a href="@Url.Action("AddTopic", "Home")" class="active">Добавить тему</a></li>
                <li><a href="@Url.Action("Contacts", "Home")">Контакты разработчика</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <p>Введите информацию для добавления новой темы</p>
        <form id="topic-form" method="post">
            <div>
                <label asp-for="TopicName">Название темы:</label>
                <input asp-for="TopicName" id="topic-name" name="TopicName" placeholder="Не менее 3 символов">
                <span class="error-message" id="topic-name-error"></span>
            </div>

            <div>
                <label asp-for="SectionName">Название раздела:</label>
                <input asp-for="SectionName" id="section-name" name="SectionName" placeholder="Не менее 3 символов">
                <span class="error-message" id="section-name-error"></span>
            </div>

            <div>
                <label asp-for="Description">Описание:</label>
                <textarea asp-for="Description" id="description" name="Description" placeholder="Не менее 10 символов"></textarea>
                <span class="error-message" id="description-error"></span>
            </div>

            <div>
                <label asp-for="AuthorName">Имя автора:</label>
                <input asp-for="AuthorName" id="author-name" name="AuthorName" placeholder="Только буквы и пробелы">
                <span class="error-message" id="author-name-error"></span>
            </div>

            <div>
                <label asp-for="Email">Email автора:</label>
                <input asp-for="Email" id="email" name="Email" type="email" placeholder="example@mail.com">
                <span class="error-message" id="email-error"></span>
            </div>

            <div>
                <label asp-for="CreationDate">Дата создания темы:</label>
                <input asp-for="CreationDate" id="creation-date" name="CreationDate" type="date">
                <span class="error-message" id="creation-date-error"></span>
            </div>

            <div>
                <label asp-for="Complexity">Сложность темы (звезды):</label>
                <select asp-for="Complexity" id="complexity" name="Complexity">
                    <option value="">Выберите сложность</option>
                    <option value="1">1 звезда</option>
                    <option value="2">2 звезды</option>
                    <option value="3">3 звезды</option>
                    <option value="4">4 звезды</option>
                    <option value="5">5 звезд</option>
                </select>
                <span class="error-message" id="complexity-error"></span>
            </div>

            <div>
                <label asp-for="ReadingTime">Время чтения:</label>
                <select asp-for="ReadingTime" id="reading-time" name="ReadingTime">
                    <option value="">Выберите время</option>
                    <option value="5">5 минут</option>
                    <option value="15">15 минут</option>
                    <option value="30">30 минут</option>
                    <option value="60">1 час</option>
                    <option value="120">2 часа</option>
                </select>
                <span class="error-message" id="reading-time-error"></span>
            </div>

            <button type="submit">Добавить</button>
        </form>
    </main>
    <footer>
        <p>
            <img src="~/assets/kaspersky.jpg" alt="Логотип Kaspersky" class="footer-img">
            Файлы защищены Kaspersky Internet Security
        </p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/js/add-topic.js"></script>
</body>
</html>